{
  "name": "v0-focus-extension",
  "version": "1.0.0",
  "description": "Focus extension for productivity",
  "scripts": {
    "test": "vitest run tests/",
    "test:debug": "vitest run tests/ --reporter=verbose",
    "test:communication": "vitest run tests/debug-communication.test.ts",
    "test:initialization": "vitest run tests/debug-initialization.test.ts",
    "test:storage": "vitest run tests/debug-storage.test.ts",
    "test:content-script": "vitest run tests/debug-content-script.test.ts",
    "test:dnr": "vitest run tests/debug-dnr.test.ts",
    "test:integration": "vitest run tests/debug-integration.test.ts",
    "debug:run": "node tests/run-debug-tests.js",
    "debug:browser": "echo 'Execute the contents of tests/browser-debug.js in the browser console'",
    "build": "npm run build:ui && npm run build:background && npm run build:content",
    "build:ui": "vite build",
    "build:background": "vite build --config vite.background.config.ts",
    "build:content": "vite build --config vite.content.config.ts",
    "dev": "vite",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^1.0.0",
    "zustand": "^5.0.8"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "lucide-react": "^0.547.0",
    "react": "^18.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.0.0"
  }
}
