{
  "name": "v0-focus-extension",
  "version": "1.0.0",
  "description": "Focus extension for productivity",
  "type": "module",
  "scripts": {
    "test": "vitest run tests/",
    "test:debug": "vitest run tests/ --reporter=verbose",
    "test:unit": "vitest run tests/unit/",
    "test:integration": "vitest run tests/integration/",
    "test:all": "vitest run tests/",
    "test:blocker": "vitest run tests/integration/blocker.test.ts",
    "test:tracker": "vitest run tests/integration/usage-tracker.test.ts",
    "test:pomodoro": "vitest run tests/integration/pomodoro.test.ts",
    "test:messages": "vitest run tests/integration/message-handler.test.ts",
    "test:analyze": "tsx scripts/error-analyzer.ts",
    "test:run": "tsx scripts/test-runner.ts",
    "test:e2e": "tsx scripts/e2e-test-runner.ts",
    "test:e2e:report": "tsx scripts/e2e-report-generator.ts",
    "test:watch": "vitest watch tests/",
    "test:coverage": "vitest run --coverage tests/",
    "debug:run": "node tests/run-debug-tests.js",
    "debug:browser": "echo 'Execute the contents of tests/browser-debug.js in the browser console'",
    "build": "npm run build:ui && npm run build:background && npm run build:content",
    "build:ui": "vite build",
    "build:background": "vite build --config vite.background.config.ts",
    "build:content": "vite build --config vite.content.config.ts",
    "dev": "vite",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.0.254",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@paper-design/shaders-react": "0.0.47",
    "chart.js": "^4.5.1",
    "dompurify": "^3.0.8",
    "lucide-react": "^0.547.0",
    "react": "^18.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.0.0",
    "zustand": "^5.0.8"
  }
}
